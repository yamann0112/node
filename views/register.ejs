<%- include('partials/header') %>
<div class="auth-container" style="max-width: 400px; margin: 100px auto; padding: 40px; background: var(--glass); border: 1px solid var(--glass-border); border-radius: 20px; backdrop-filter: blur(10px);">
    <h2 style="text-align: center; margin-bottom: 30px;"><span class="gold">Luxe</span> Kayıt Ol</h2>
    <form action="/kayit" method="POST" style="display: flex; flex-direction: column; gap: 20px;">
        <div class="form-group">
            <label style="display: block; margin-bottom: 8px; color: var(--gold);">Kullanıcı Adı</label>
            <input type="text" name="username" required style="width: 100%; padding: 12px; background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); border-radius: 8px; color: white;">
        </div>
        <div class="form-group">
            <label style="display: block; margin-bottom: 8px; color: var(--gold);">Görünen Ad</label>
            <input type="text" name="display_name" required style="width: 100%; padding: 12px; background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); border-radius: 8px; color: white;">
        </div>
        <div class="form-group">
            <label style="display: block; margin-bottom: 8px; color: var(--gold);">Şifre</label>
            <input type="password" name="password" required style="width: 100%; padding: 12px; background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); border-radius: 8px; color: white;">
        </div>
        <button type="submit" class="glass-btn" style="width: 100%; padding: 15px; font-weight: bold; background: var(--gold); color: black;">KAYIT OL</button>
    </form>
    <p style="text-align: center; margin-top: 20px; font-size: 0.9rem;">Zaten üye misiniz? <a href="/giris" class="gold">Giriş Yap</a></p>
</div>
<%- include('partials/footer') %>
