    <nav class="top-bar">
        <div class="nav-left">
            <button id="menu-toggle" class="glass-btn">☰</button>
            <span class="logo">LUXE <span class="gold">GAMING</span></span>
        </div>
        <div class="nav-right">
            <% if (user) { %>
                <span class="user-info" style="margin-right: 15px;"><%= user.username %></span>
                <a href="/logout" class="glass-btn" style="text-decoration: none; font-size: 0.8rem;">Logout</a>
            <% } else { %>
                <a href="/login" class="glass-btn" style="text-decoration: none; font-size: 0.8rem;">Login</a>
            <% } %>
            <button id="theme-toggle" class="glass-btn">◑</button>
        </div>
    </nav>

    <div id="side-menu" class="side-menu">
        <a href="/">Home</a>
        <a href="/chat">Global Chat</a>
        <a href="/films">Films</a>
        <a href="/games">Games</a>
        <a href="/pk">PK Rooms</a>
        <a href="/events">Events</a>
        <% if (user && user.role === 'admin') { %>
            <hr style="border: 0; border-top: 1px solid var(--glass-border); margin: 10px 0;">
            <a href="/admin">Admin Panel</a>
        <% } %>
