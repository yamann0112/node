<%- include('partials/header') %>
<div class="admin-container" style="padding: 20px 5%; max-width: 1200px; margin: 0 auto;">
    <h1 class="gold" style="margin-bottom: 30px;">Admin Dashboard</h1>
    
    <div class="admin-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
        <div class="glass-card" style="padding: 20px; background: var(--glass); border: 1px solid var(--glass-border); border-radius: 15px;">
            <h3 class="gold">Global Announcement</h3>
            <form action="/admin/announcement" method="POST" style="margin-top: 15px; display: flex; flex-direction: column; gap: 10px;">
                <textarea name="announcement" style="width: 100%; height: 80px; background: rgba(0,0,0,0.3); border: 1px solid var(--glass-border); border-radius: 8px; color: white; padding: 10px;"><%= announcement %></textarea>
                <button class="glass-btn" style="background: var(--gold); color: black; font-weight: bold;">UPDATE MARQUEE</button>
            </form>
        </div>

        <div class="glass-card" style="padding: 20px; background: var(--glass); border: 1px solid var(--glass-border); border-radius: 15px;">
            <h3 class="gold">Quick Actions</h3>
            <ul style="list-style: none; margin-top: 15px; display: flex; flex-direction: column; gap: 10px;">
                <li><a href="/admin/users" class="gold" style="text-decoration: none;">Manage Users</a></li>
                <li><a href="/admin/events" class="gold" style="text-decoration: none;">Manage Events</a></li>
                <li><a href="/admin/pk" class="gold" style="text-decoration: none;">Manage PK Rooms</a></li>
            </ul>
        </div>
    </div>
</div>
<%- include('partials/footer') %>
